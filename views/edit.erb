<p><%= flash[:alert] %></p>

<ul>
  <h3>記事を編集</h3>

  <ul>
    <div class="container bs-docs-container">
      <div class="row">
        <div class="" role="main">
          <h3>記事一覧</h3>
          <table id="result" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>更新日時</th>
                <th>コマンド</th>
              </tr>
            </thead>
            <tbody>
              <% @articles.each do |article| %>
              <tr>
                <th scope="row"><a href="/article/<%= article.id %>"><%= article.id %></a></th>
                <td><%= h article.title %></td>
                <td><%= h article.updated_at %></td>
                <td><span class="delete-btn glyphicon glyphicon-trash" value="<%= article.id %>" aria-hidden="true"></span></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </ul>
</ul>

<script>
  $('.delete-btn').click(function() {
    if (confirm('削除しますか？')) {
      $.post('/admin/delete', {
        id: $(this).attr("value")
      }, function() {
        location.reload();
      });
    }
  })
</script>
